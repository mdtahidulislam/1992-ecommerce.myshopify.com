<div class="container">
  {% paginate collection.products by 4 %}
    <div class="row">
      <div class="col">
        <h1 class="text-center mb-5">{{ collection.title }}</h1>
      </div>
    </div>
    <div class="row">
      {% for product in collection.products %}
        <div class="col-md-3 text-center mb-4">
          <div class="card collection-card">
            {% unless product.available %}<strong class="sold-ribbon">sold out</strong>{% endunless %}
            <a href="#" id="productInfoAnchor" product-handle={{ product.handle }} product-price={{ product.price | money }}>
              <img class="img-fluid" src="{{ product.featured_image.src | image_url }}" alt="{{ product.featured_image.alt | escape }}">
            </a>
            <p>{{ product.title }}</p>
            <span class="mb-4">{{ product.price | money }}</span>
          </div>
        </div>
      {% else %}
        <p>no matches</p>
      {% endfor %}
    </div>
    {% if paginate.pages > 1 %}
    <div class="row">
      <div class="col-12">
        <div class="pagination justify-content-center mt-3 mb-5">
          {{ paginate | default_pagination }}
        </div>
      </div>
    </div>
    {% endif %}
  {% endpaginate %}
</div>
