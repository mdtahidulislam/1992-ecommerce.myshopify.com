<!-- /templates/customers/register.liquid -->
<div class="log-reg-header">
    <h3>Register</h3>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            {% form 'create_customer' %}
                <div class="register-header form-header">
                    <div class="formh-eader-title">Register</div>
                </div>
                {{ form.errors | default_errors }}
                <div class="form-input-wrapper">
                    <p class="form-row">
                        <label for="first_name">First Name</label>
                        <input type="text" name="customer[first_name]"  >
                    </p>
                    <p class="form-row">
                        <label for="last_name">Last Name</label>
                        <input type="text" name="customer[first_name]"  >
                    </p>
                    <p class="form-row">
                        <label for="email">Email</label>
                        <input type="email" name="customer[email]"  >
                    </p>
                    <p class="form-row">
                        <label for="password">Password</label>
                        <input type="password" name="customer[password]"  >
                    </p>
                    <p class="form-row">Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy.
                    </p>
                    <input type="submit"  value="Register" class="mb-3 text-uppercase">
                    <p>Already have an account? <a href="/account/login">Login here</a></p>
                </div>
            {% endform %}
        </div>
    </div>
</div>
